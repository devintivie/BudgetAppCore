<Window x:Class="BudgetAppCore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetAppCore"
        xmlns:vms="clr-namespace:BudgetAppCore.ViewModels;assembly=BudgetAppCore.ViewModels"
        mc:Ignorable="d"
        Title="BudgetApp" Height="450" Width="800">
    <Window.DataContext>
        <vms:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <ContentControl Content="{Binding BillViewModel}"/>
    </Grid>
</Window>
